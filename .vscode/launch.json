{
  "version": "0.0.1",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/src",
      "outputCapture": "std",
      "sourceMaps": true,
      "args": [
        "run",
        "debug:nodemon"
      ],
      "env": {
        "DEBUG": "true",
        "NODE_ENV": "dev"
      },
    }
  ]
}